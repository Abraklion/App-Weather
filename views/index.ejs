<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <title>Проект на NodeJs</title>
</head>
<body>
    <div class="app">
        <div class="app__inner">
            <div class="app__header">

                <h1 class="app__title">Прогноз погоды</h1>

                <% if(weather) { %>

                <div class="app__options">
                    <p class="app__city"><%=weather.city%></p>
                    <p class="app__celsius"><%=weather.celsius%> &#8451;</p>
                </div>

                <%}%>

                <% if(error) { %>

                <p class="app__error"><%=error%></p>

                <%}%>

                <form action="/" method="POST" class="app__form form">
                    <div class="form__input">
                        <label class="visually-hidden" for="city">Город</label>
                        <input type="text" id="city" name="city" placeholder="Напишите ваш город">
                    </div>
                    <button class="form__btn btn">Показать погоду</button>
                </form>

            </div><!--/.app__header-->
        </div>
    </div><!--/.app-->
</body>
</html>
